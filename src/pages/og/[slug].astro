---
import { type CollectionEntry, getCollection } from 'astro:content'
import '../../styles/global.css'
import '../../styles/post.css'
import '@fontsource/merriweather'

export async function getStaticPaths() {
  const blogEntries = await getCollection('posts')
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }))
}

type Props = {
  entry: CollectionEntry<'posts'>
}

const { entry } = Astro.props
---

<div class="w-[1200px] h-[627px]">
  <div class="gradient-container shadow-md p-2 rounded-xl w-full h-full">
    <div
      class="w-full h-full rounded-lg flex flex-col gap-20 justify-center heading bg-white/60 text-slate-700 p-10 border"
    >
      <h1 class="inline text-6xl text-center font-bold leading-[1.3]">
        {entry.data.title}
      </h1>
      <div
        class="flex flex-col items-center gap-6 justify-between max-w-4xl mx-auto"
      >
        <img
          src="https://github.com/austincrim.png"
          class="object-cover w-48 h-48 shadow-md rounded-full"
        />
        <p class="text-2xl font-merriweather">
          Hey, I'm Austin. Click my face to read my thoughts.
        </p>
      </div>
    </div>
  </div>
</div>
